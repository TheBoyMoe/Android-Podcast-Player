<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:padding="@dimen/normal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/podcast_thumbnail"
        android:adjustViewBounds="false"
        android:layout_width="@dimen/podcast_thumbnail_size"
        android:layout_height="@dimen/podcast_thumbnail_size"
        android:layout_marginEnd="@dimen/normal"
        tools:src="@mipmap/ic_launcher"
        android:src="@mipmap/ic_launcher"
        tools:ignore="ContentDescription"/>


    <LinearLayout
        android:layout_toEndOf="@id/podcast_thumbnail"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/podcast_title"
            tools:text="Another one bites the dust"
            android:text="Another one bites the dust"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/podcast_description"
            android:maxLines="3"
            tools:text="@string/podast_desciption"
            android:text="@string/podast_desciption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/podcast_pub_date"
            android:maxLines="3"
            tools:text="Lastest episode: 26 Aug 2016"
            android:text="Lastest episode: 26 Aug 2016"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/podcast_episodes_number"
            android:maxLines="3"
            tools:text="Episodes: 264"
            android:text="Episodes: 264"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</RelativeLayout>