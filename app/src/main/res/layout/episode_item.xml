<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/episode_item"
        android:paddingTop="@dimen/normal"
        android:paddingBottom="@dimen/normal"
        android:orientation="vertical"
        android:weightSum="5"
        android:background="@drawable/touch_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/episode_day"
            tools:text="26"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/episode_number"
            tools:text="Episode: 33"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:maxLines="1"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/episode_month"
            tools:text="Aug"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/episode_title"
            tools:text="The one where the pig got away"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- play episode -->
        <ImageView
            android:id="@+id/episode_play"
            android:adjustViewBounds="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/episode_duration"
            tools:text="56 min"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"/>

        <!--<android.support.v4.widget.Space-->
            <!--android:layout_gravity="fill"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="0dp"/>-->

        <!-- download episode -->
        <ImageView
            android:id="@+id/episode_download"
            android:adjustViewBounds="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_download_black"
            tools:ignore="ContentDescription"/>


        <!-- add to playlist -->
        <ImageView
            android:id="@+id/episode_playlist"
            android:adjustViewBounds="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_playlist_dark"
            tools:ignore="ContentDescription"/>


    </LinearLayout>


</LinearLayout>